<resources>

    <!-- Base application theme. -->
    <style name="Theme.DtfApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorThemePrimaryDark</item>
        <item name="colorAccent">@color/colorThemeSecondaryLight</item>
    </style>
    
    <style name="DtfTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DtfTextViewLight">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#65000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DtfTextCaption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#65000000</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
